---
import "../styles/global.css"



//import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
    title: string
}

const {title} = Astro.props
---


<html lang="es">
          
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image" href="/victoriano.webp" />
        <link 
        rel="preload" 
        href="/fonts/Adamu.woff2" 
        as="font" 
        type="font/woff2" 
        crossorigin
        />

        <link rel="canonical" href="https://victorianos-web.netlify.app" />

        <meta property="og:title" content="CR Victorianos" />
        <meta property="og:description" content="La cantera y el club de rugby más activo de la Costa del Sol." />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://victorianos-web.netlify.app" />
        <meta property="og:image" content="https://victorianos-web.netlify.app/images/victoriano-200x200.webp" />

        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Club de Rugby Victorianos, la cantera del rugby en Málaga. Únete a La Escuelita (4-18 años) o ven a animar a nuestros equipos. ¡Rugby y comunidad!" />
        <title>{title} | CR Victorianos</title>
    </head>
    <body class="w-full min-h-screen m-0 p-0">
        <Header />
         <main class="pt-16">
            <slot />
         </main>
        
         <Footer />
        
    </body>
</html>



